{
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDeclarationOnly": true,
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "./lib/es",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictBindCallApply": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
