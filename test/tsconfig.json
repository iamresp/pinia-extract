{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictBindCallApply": true
    },
    "include": ["./*.ts"]
}
